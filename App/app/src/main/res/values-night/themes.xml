<resources>
    <!-- Base application theme. -->
    <style name="Theme.Solace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/textColorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Background color -->
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="colorSurface">@color/backgroundLight</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="colorError">@color/colorAccent</item>
        <item name="colorOnError">@color/white</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Solace" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>